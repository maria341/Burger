<div class="row text-center">
    <img src="/assets/images/burger1.png" height="250" width="400">
    <h1 class="text-center">Choose Your Favorite Burger</h1>
</div>

<div class="row text-center">
    <div class="col-lg-6">
        <h2>The Menu</h2>
    </div>

    <ul>
        {{#each burgers}}
        {{#if this.devoured}}
        <li id="menu">

            <div class="row">
                <div class="col-lg-3">
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="false">

                        <button class="img" type="submit"></button>
                    </form>
                </div>
                <div class="col-lg-4">
                    <p class="well well-lg">{{this.id}}. {{this.burger_name}}</p>
                </div>
            </div>
        </li>
        {{/if}}
        {{/each}}
    </ul>
</div>

<div class="col-lg-6 col-lg-offset-3 text-center">
    <h2>Add Your Favorite Burger</h2>
    <form class="create-update-form" action="/" method="POST">

    <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input class="form-control" type="text" id="burger" name="name">
     </div>

     <button class="btn btn-success" type="submit">Add Burger</button>
    </form>

</div>

