<div class="container">
  <div class="jumbotron">
    <h1>Eat The Burger!</h1>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading" id="left"><strong>YOUR BURGER</strong></div>
        <div class="panel-body">
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading" id="right"><strong>DEVOUR IT</strong></div>
        <div class="panel-body">
          <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devour=false}}
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div <br><br><br><br><br>
  <div class="row text-center">
    <div class="col-lg-6">
      <h2>Add a burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burg">Burger Name:</label>
          <input type="text" id="burg" name="name">
        </div>

        <div class="form-group">
          <label for="devoured">Choose your favorite burger?</label><br>
          <input type="radio" name="devoured" value="0"> Your Burger
        </div>


        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>