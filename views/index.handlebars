<div class="container">
  <div class="jumbotron">
  
    <img src="/assets/images/logo.jpg" height="130" width="200">
  <h1>Yum Burger!!!</h1>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading" id="left" style="background-color: #fca903"><strong>YOUR BURGER</strong></div>
        <div class="panel-body" style="background-color:#a6d980">
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading" id="right" style="background-color: #fca903"><strong>DEVOUR IT</strong></div>
        <div class="panel-body" style="background-color: #a6d980">
          <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devour=false}}
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div <br><br><br><br><br>
  <div class="row text-center">
    <div class="col-lg-4">
      <h2 style="color: orange">Add a Burger!</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burg" style="color: orange">Burger Name:</label>
          <input type="text" id="burg" name="devoured">
        </div>

      <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>